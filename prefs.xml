<?xml version="1.0"?>
<interface domain="sp-tray">

    <object class="GtkBox" id="prefs_widget">

        <child>

            <object class="GtkGrid">
                <property name="margin-top">18</property>
                <property name="margin-start">18</property>
                <property name="margin-end">18</property>
                <property name="margin-bottom">18</property>
                <property name="row-spacing">18</property>
                <property name="row-homogeneous">false</property>
                <property name="orientation">vertical</property>

                <!-- Controls for how to display track metadata -->

                <child>
                    <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="margin-start">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">Here you can enter the expression to define how the track metadata is going to be displayed. 
                                    Accepted placeholders are {track}, {album}, and {artist}</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="margin-start">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">Display format</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkEntry" id="field_format">
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="show_emoji_icon">True</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="resetFormat">
                                <property name="label" translatable="yes">↺</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="receives_default">True</property>
                                <signal name="clicked" handler="on_resetFormat_clicked" swapped="no" />
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                    </object>
                </child>

                <!-- Controls for what to show when spotify client is not running -->
                <child>
                    <object class="GtkBox">
                        <property name="margin-start">12</property>
                        <property name="spacing">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property translatable="yes" name="label">Hide when Spotify isn't running?</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkSwitch" id="field_hideInactive">
                                <property name="active">true</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="margin-start">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">Icon to show when Spotify is inactive</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkEntry" id="field_notRunning">
                                <property name="max_length">4</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="show_emoji_icon">True</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="resetNotRunning">
                                <property name="label" translatable="yes">↺</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="receives_default">True</property>
                                <signal name="clicked" handler="on_resetNotRunning_clicked" swapped="no" />
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                    </object>
                </child>

                <!-- Controls for what to show when playback is paused -->
                <child>
                    <object class="GtkBox">
                        <property name="margin-start">12</property>
                        <property name="spacing">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property translatable="yes" name="label">Hide when playback is paused?</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkSwitch" id="field_hidePaused">
                                <property name="active">true</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="margin-start">12</property>
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">Icon to show when playback is paused</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkEntry" id="field_paused">
                                <property name="max_length">4</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="show_emoji_icon">True</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="resetPaused">
                                <property name="label" translatable="yes">↺</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="receives_default">True</property>
                                <signal name="clicked" handler="on_resetPaused_clicked" swapped="no" />
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="homogeneous">True</property>

                        <child>
                            <object class="GtkButton" id="resetButton">
                                <property name="label" translatable="yes">Restore defaults</property>
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="receives_default">True</property>
                                <property name="hexpand">true</property>
                                <property name="halign">1</property>
                                <signal name="clicked" handler="on_defaults_clicked" swapped="no" />
                                <style>
                                    <class name="destructive-action" />
                                </style>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>